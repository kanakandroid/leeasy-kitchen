<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/detailHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaa"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_8"
        android:paddingLeft="@dimen/dim_16"
        android:paddingRight="@dimen/dim_16"
        android:paddingTop="@dimen/dim_8"
        android:visibility="gone">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/pure_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headerQTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/pure_white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/lineColor"
            android:layout_width="@dimen/dim_16"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dim_8">

            <TextView
                android:id="@+id/lineTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#414141"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lineCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/orderInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#5F7C8A"
            android:paddingLeft="@dimen/dim_16"
            android:paddingRight="@dimen/dim_16"
            android:src="@drawable/ic_info_outline"
            android:tint="#fff" />

        <ImageView
            android:id="@+id/actionReadyToDeliver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim_4"
            android:background="#CCDB38"
            android:paddingLeft="@dimen/dim_16"
            android:paddingRight="@dimen/dim_16"
            android:src="@drawable/ic_check_black"
            android:tint="#fff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dim_16"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/dim_16">

            <TextView
                android:id="@+id/lineQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/label_qty"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>